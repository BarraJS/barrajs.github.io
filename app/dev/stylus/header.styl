@import 'variables'
	
//header	
header
	background url(../image/banner.jpg)
	background-size cover
	min-height 400px
	//barHeader
	.barHeader
		background rgba(43, 50, 62, 0.9)
		position fixed
		width 100%
		z-index 1
		top 0
		//logo
		.logo
			column(1/6) 
			h1 
				space(0,0)
				a
					background url(../image/logoMin.png) no-repeat
					text-indent	-999999px
					display: table
					size(49px,28px)
					top 12px
					position relative
		//nav	
		nav
			column(5/6)
			li
				display inline-table
				a
					text-decoration: none;
					font(16px,white,normal)
					space(0,10px)
	
	.cont
		size(100%,auto)
		min-height 400px
		text-align center
		background rgba(0,0,0,0.5)
		margin-top 50px
		padding-top 50px
		h1
			background url(../image/logo.png) no-repeat
			size(399px,149px)
			text-indent -999999px
			margin 0 auto
		a
			background blue
			font(27px,white,normal)
			padding 10px  70px
			text-decoration none
			position relative
			top 40px
			text-transform	uppercase
			border-bottom 6px solid light-blue
			transition(0.5s)
			&:hover
				background light-blue
				border-bottom 6px solid blue
				transition(0.5s)
		p
			font(16px,white,normal)
			text-align center
			padding-left 100px
		
		
	


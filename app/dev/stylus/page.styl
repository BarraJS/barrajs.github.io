@import 'variables'
	
//taks--**--
.talks
		background #f6f6f6
		text-align center
		space(0,10px)
		ul li
			display inline-table
			space(0,10px)
			.box
				display table
				background white
				text-align center
				space(0 auto,10px)
				h3
					space(0,0)
					a
						font(15px,blue,normal)
				span
					font(14px,dark-blue,normal)

//horarios--**--
.horarios
	margin-top	30px
	size(100%,auto)
	font(15px,gray,normal)
	text-align left
	//thead
	thead
		font(16px,blue,bold)
		.th1
			size(15%,auto)
		.th2
			size(25%,auto)
		.th3
			size(60%,auto)
	tbody
		tr:hover
			background #FFFFDF !important
		tr:nth-child(even)
			background	white
		tr:nth-child(odd) 
			background #f6f6f6
		.hrs
			color blue
		td
			padding 15px 25px
			img
				size(45px,auto)
				border-radius 20px
				position absolute
			.desc h3
				padding-left: 60px
				font(15px,gray,normal)
				
//maps--**--
.maps
	display inline-block
	width 100%
	position relative
	.descMaps
		background rgba(49,53,64,0.9)
		width 400px
		height auto
		color #fff
		position absolute
		max-width 700px
		text-align center
		right 0
		-webkit-transition all .25s
		-o-transition all .25s
		transition all .25s
		top 20%
	.map-overlay
		background transparent
		position relative
		width 100%
		height 400px
		top 400px
		margin-top -400px
		color transparent
		text-align center
		cursor pointer
	iframe
		size(100%,400px)

//sponsor/organizers--*--
.sponsors,.organizers
	center()
	ul li
		display inline-table
		text-decoration none
		margin 0px 10px

.organizers
	background #f6f6f6
	text-align center
	space(0,10px)
	ul li
		display inline-table
		.box
			display table
			background white
			text-align center
			space(0 auto,10px)
			h3
				space(0,0)
				a
					font(15px,blue,normal)
				span
					font(14px,dark-blue,normal)
			
			